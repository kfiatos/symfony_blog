{% extends 'base.html.twig' %}

{% block body %}
    <a href="{{ path('post_new') }}">Create a new post</a>
    <h1>Posts list</h1>
    <div class="post-list-container">
        {% for post in posts %}
            <h2>{{ post.title }}</h2>
            <div class="post-author">
                Created by {{ post.author }}
            </div>
            <div class="post-wrapper">
                <p>{{ post.content }}</p>
            </div>
        {% endfor %}
        <div class="sidebar"></div>
    </div>



{% endblock %}
